{
	"name": "copsewood-aviaries",
	"version": "1.0.0",
	"description": "Express web app for Copsewood",
	"main": "server.js",
	"engines": {
		"node": "8.11.4"
	},
	"scripts": {
		"-------- GENERAL --------": "",
		"start": "node ./dist/server",
		"dev": "npm run compile-js && npm-run-all -p watch dev-server",
		"dev-server": "babel-watch ./src/server",
		"-------- BUILD --------": "",
		"clean": "rimraf dist",
		"build-server": "webpack --config webpack.server-prod.js",
		"build-client": "webpack --config webpack.client-prod.js",
		"build-css": "node-sass src/public/styles/scss/index.scss --output-style compressed > dist/public/styles/index.css",
		"build": "npm-run-all -s build-server build-client build-css",
		"-------- COMPILE --------": "",
		"compile-js": "webpack --config webpack.dev.js",
		"compile-css": "node-sass src/public/styles/scss/index.scss > src/public/styles/index.css",
		"------- WATCH --------": "",
		"watch-css": "onchange \"src/public/styles/scss/**/*.scss\" -- npm run compile-css",
		"watch-js": "onchange \"src/public/js/client/*.js\" -- npm run compile-js",
		"watch": "npm-run-all -p watch-js watch-css"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/JamieSullivanD15/copsewood-aviaries.git"
	},
	"author": "Jamie Sullivan",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/JamieSullivanD15/copsewood-aviaries/issues"
	},
	"homepage": "https://github.com/JamieSullivanD15/copsewood-aviaries#readme",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.20.1",
		"connect-flash": "^0.1.1",
		"cookie-parser": "^1.4.3",
		"ejs": "^2.6.1",
		"express": "^4.18.2",
		"express-messages": "^1.0.1",
		"express-session": "^1.15.6",
		"express-validator": "^5.3.0",
		"jquery": ">=3.4.0",
		"jsonwebtoken": "^8.4.0",
		"nodemailer": "^4.7.0",
		"passport": "^0.4.0",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"validator": "^10.8.0"
	},
	"devDependencies": {
		"babel": "^6.23.0",
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.3",
		"babel-loader": "^7.1.5",
		"babel-preset-env": "^1.7.0",
		"babel-watch": "^2.0.7",
		"copy-webpack-plugin": "^4.5.2",
		"css-loader": "^1.0.1",
		"file-loader": "^2.0.0",
		"mini-css-extract-plugin": "^0.4.5",
		"mongoose": "^5.3.2",
		"multer": "^1.4.1",
		"node-sass": "^4.9.3",
		"npm-run-all": "^4.1.3",
		"onchange": "^5.0.2",
		"optimize-css-assets-webpack-plugin": "^5.0.1",
		"rimraf": "^2.6.2",
		"sass-loader": "^7.1.0",
		"style-loader": "^0.23.1",
		"tar": ">=4.4.2",
		"uglifyjs-webpack-plugin": "^2.0.1",
		"webpack": "^4.20.2",
		"webpack-cli": "^3.1.2",
		"webpack-merge": "^4.1.4",
		"webpack-node-externals": "^1.7.2"
	}
}
